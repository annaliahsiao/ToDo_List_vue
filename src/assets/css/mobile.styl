@media screen and (max-width:1024px)
    #menu_flag
        display none
        + label
            display block
            position absolute
            top 50%
            right 0
            transform: translate(-50%,-50%)
            width 30px
            height 25px
            cursor pointer
            i,o,u
                position absolute
                left 0
                width 100%
                height 1px
                background-color green
                transform: translate(0,-50%)
                transition: all .3s
            i
                top 0
            o
                top 50%
            u
                top 100%
        ~ #menu_list
            display none
            position fixed
            top hd_h
            left 0
            width 100%
            height 100%
            margin-right 0
            background-color #fff
            a
                display block
                width 100%
                height auto
                border-right none
                border-bottom 1px solid green
                &:last-child
                    border-bottom none
        &:checked
            + label
                i
                    top 50%
                    left 50%
                    transform: translate(-50%,-50%) rotate(45deg)
                o
                    width 0
                u
                    top 50%
                    left 50%
                    transform: translate(-50%,-50%) rotate(-45deg)
            ~ #menu_list
                display block
    #todo_add
        text-align right
        a
            margin-left 0
        label
            width 100%
            text-align left
        input,select,.mx-datepicker
            display block
            width 100%
    #add_todo_btn
        text-align center
    #todo_list_demo
        text-align left
    #todo_list_area
        flex-direction: column
        .col
            &:nth-of-type(1)
                border-bottom 1px solid yellow
                padding-bottom 1rem
                margin-bottom 2rem
